library CompileInfo {

  public struct CompileInfo {

    static constant string  compiledBy = "quazz";

    static constant integer year       = 2013;
    static constant integer dayOfYear  = 74;
    static constant integer month      = 3;
    static constant integer day        = 15;
    static constant integer hours      = 21;
    static constant integer minutes    = 34;
    static constant integer seconds    = 44;

    static method operator dateTime () -> string {
      return I2S(year) + "-" + I2S(month) + "-" + I2S(day) + " " +
             I2S(hours) + ":" + I2S(minutes) + ":" + I2S(seconds);
    }

    static method onInit() {
      debug {
        BJDebugMsg( "Compiled by: " + CompileInfo.compiledBy );
        BJDebugMsg( "Compiled on: " + CompileInfo.dateTime );
      }
    }
  }
}